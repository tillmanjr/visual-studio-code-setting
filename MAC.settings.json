{
    "javascript.updateImportsOnFileMove.enabled": "always",
    // tdjr add - hide the open editors section in explorer
    "explorer.openEditors.visible": 0,
    "window.zoomLevel": 0,
    // tdjr add - change window title: isDirty, projectRelativePath, - , name of workspace root
    "window.title": "${dirty} ${rootName} ${separator} ${activeEditorMedium} ${separator}",
    // _____________________ Editor ________________________________
    //  tdjr change - from "none" to "all"
    "editor.renderWhitespace": "all",
    // tdjr add - enable smooth scrolling
    "editor.smoothScrolling": true,
    // tdjr add - have cursor "phase" instead of blink
    "editor.cursorBlinking": "phase",
    // tdjr add - slight animation to cursor when moved, easier to track
    "editor.cursorSmoothCaretAnimation": true,
    // _____________  ...Indents: Tabs, Spaces, Depth _____________
    "editor.detectIndentation": true,  // tdjr add
    "editor.insertSpaces": true,       // tdjr add
    "editor.tabSize": 2,
    // ____________________ MiniMap ________________________________
    "editor.minimap.enabled": false,
    // tdjr add next 3 lines - improve appearance of minimap when shown
    "editor.minimap.renderCharacters": false,
    "editor.minimap.maxColumn": 200,
    "editor.minimap.showSlider": "always",
    // tdjr add
    "files.trimTrailingWhitespace": true,

    // ____________________ Workbench ______________________________
    // tdjr add - use theme: Material Theme Ocean High Contrast
    "workbench.colorTheme": "Material Theme Ocean High Contrast",
    // tdjr add - use icons which better match a material theme
    "workbench.iconTheme": "eq-material-theme-icons",
    // tdjr add - doesn't reuse same tab on quick open
    "workbench.editor.enablePreviewFromQuickOpen": false,
    // tdjr add - enable or disable default Natural Language search - uses Bing
    "workbench.settings.enableNaturalLanguageSearch": true,
    // tdjr add - the little status bar smiley is cute, kill it
    "workbench.statusBar.feedback.visible": false,
    // _______________ Emmet 2.0 Settings __________________________
    // tdjr add section - treat all .js files like .jsx files
    "emmet.includeLanguages": {
        "javascript": "javascriptreact",
    },
    // _________________ EXTENSION SETTINGS ________________________
    // __________________ Breadcrumbs ______________________________
    // tdjr add - enable file path breadcrumb
    "breadcrumbs.enabled": true,
    // ________________ ToDo Highlight _____________________________
    // tdjr add - make TODO: FIXME: highlighting case insensitive, >>  todo: fixme: are highlighted
    "todohighlight.isCaseSensitive": false,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "[json]": {
        "editor.defaultFormatter": "HookyQR.beautify"
    },

    "[javascript]": {
        "editor.tabSize": 2
    },
    "[javascriptreact]": {
        "editor.tabSize": 2
    },
    "indentRainbow.colors": [
